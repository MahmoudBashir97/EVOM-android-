<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:background="#0FFFFFF9">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/back_pic"
                >
                <ImageView
                    android:id="@+id/pic_cust"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true"
                    android:src="@drawable/gym"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/name_cust"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:text="Mahmoud Bashir"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/common_back"
                    android:layout_marginTop="15dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cash pay"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/trip_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$25.00"
                    android:textSize="17sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/cust_to_drv_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2.2km"
                    android:textSize="16sp"
                    android:textColor="#B5B3B3"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:layout_marginTop="15dp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:background="#fff"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PICK UP"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/location_cust"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7958 Smart Village"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DROP OFF"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/destination_cust"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="105 Nasr City"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#000"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:padding="10dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/accept_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Accept"
                android:background="@drawable/common_back"
                android:layout_margin="5dp"
                android:layout_centerInParent="true"
                android:textAllCaps="false"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>